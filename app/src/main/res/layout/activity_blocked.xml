<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgdefault"
    android:layout_gravity="center"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@android:drawable/stat_notify_error"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_gravity="center"
        android:text="Your account has been blocked due many reports from users.\nKindly write to the developer to get more informations.."
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:textColor="@android:color/holo_red_light"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="24dp"
        android:layout_marginBottom="4dp"
        android:fadingEdge="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:id="@+id/bottomLayout"
            android:weightSum="3"
            android:padding="4dp">


            <EditText
                android:id="@+id/messageBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:enabled="true"
                android:background="@android:color/transparent"
                android:hint="Start typing"
                android:layout_gravity="start"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:inputType="textMultiLine"
                android:layout_weight="3"
                />

            <ImageButton
                android:id="@+id/sendBtn"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_send_black_24dp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>